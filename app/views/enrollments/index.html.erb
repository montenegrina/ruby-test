<p id="notice"><%= notice %></p>

<h1>Enrollments</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Method</th>
      <th>Remarks</th>
      <th>Coordinator</th>
      <th>Registry</th>
      <th>Participant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.date %></td>
        <td><%= enrollment.method %></td>
        <td><%= enrollment.remarks %></td>
        <td><%= link_to enrollment.coordinator.name, enrollment.coordinator %></td>
        <td><%= link_to enrollment.registry.name, enrollment.registry %></td>
        <td><%= link_to enrollment.participant.name, enrollment.participant %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Registries', :controller => :registries %>
| <%= link_to 'Participants', :controller => :participants %>
| <%= link_to 'Coordinators', :controller => :coordinators %>

